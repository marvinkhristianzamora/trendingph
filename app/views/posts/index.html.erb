<h1>Trending PH</h1>

<div class="row">
  <div class="span6 offset3">
    <ol>
    <% @posts.each do |post| %>
      <li>
      <div class="post">
        <%= link_to post.title, post.url, target: "_blank" %>
        
      </div>
      <div>
        <%= pluralize(post.upvote, 'point') %> - by <%= link_to post.user.username, post.user %> <%= time_ago_in_words(post.created_at) %> ago
      </div>
      </li>
    <% end %>
    </ol>
  </div>
</div>

