<div class="container">
  <div class="row">
    <div class="span10 offset1">
      <div class="pull-left">
        <% if signed_in? %>
          <a href="#submit-modal" role="button" data-toggle="modal"  class="left anchor-button-medium pomegranate rounded1">
            <i class="icon-2x icon-cloud-upload"></i>
            SUBMIT
          </a>
        <% else %>
          <%= link_to new_post_path, class: "left anchor-button-medium pomegranate rounded1" do %>
            <i class="icon-2x icon-cloud-upload"></i>
            SUBMIT
          <% end %>
        <% end %>
        <%= link_to "newsmakerPH", root_path, id: "logo" %>
      </div>
      <% flash.each do |key, value| %>
        <%= content_tag(:span, value, class: "offset1 short-alert short-alert-#{key}") %>
      <% end %>
      <div class="pull-right">
        <div class="btn-group">
          <% if signed_in? %>
            <%= link_to user_path(current_user), class: "anchor-button-narrow asbestos rounded1" do %>
              <i class="icon-large icon-user"></i>
            <% end %>
            <%= link_to signout_path, method: "delete", class: "anchor-button-narrow concrete rounded1" do %>
              <i class="icon-large icon-signout"></i>
            <% end %>
          <% else %>
            <a href="#signin-modal" role="button" data-toggle="modal"  class="left anchor-button-narrow concrete rounded1">
              <i class="icon-large icon-signin"></i>
            </a>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
