<% if !signed_in? %>
  <div id="signup-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="signup-modal-label" aria-hidden="true">
    <%= form_for(@user, remote: true, html: { "data-type" => :json }) do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="signup-modal-label" class="modal-label">Sign up</h3>
      </div>
      <div class="modal-body">
        <p>Be a newsmaker.</p>
        <%= render 'users/fields', f: f %>
      </div>
      <div class="modal-footer">
        <button class="anchor-button-medium concrete rounded1" data-dismiss="modal" aria-hidden="true">Close</button>
        <%= f.submit "Sign up", class: "anchor-button-medium alizarin rounded1", id: "signup-btn" %>
      </div>
    <% end %>
  </div>
<% end %>
